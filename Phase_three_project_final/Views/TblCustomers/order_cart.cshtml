@model IEnumerable<Phase_three_project_final.Models.TblCustomers>

@{
    ViewData["Title"] = "Order_cart";
}

@{
    var list = ViewBag.list;
    var total_price_of_cart = ViewBag.price;
}


<h2>List of purchased items</h2>

<div class="d-grid gap-2 d-md-flex justify-content-md-end">
    <a asp-controller="home" asp-action="index"><button class="btn btn-danger" type="button">Logout</button> </a>
</div>
<br />

<table class="table table-hover">
    <thead>
        <tr>
            <th>Laptop ID</th>
            <th>Laptop Name</th>
            <th>laptop Image</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in list)
            {
                <tr>
                    <td>@item.LaptopId</td>
                    <td>@item.LaptopName</td>
                    <td> <img src="@item.LaptopImage" height="100px" /> </td>
                    <td>@item.LaptopPrice</td>
                </tr>
            }
        }
    </tbody>
</table>
<hr />
<h4>Total Amount : @total_price_of_cart</h4>
<br />

@*<a asp-action="Payment"><button class="btn-primary">Buy</button></a>*@
<br />
<a asp-action="laptop_list"><button class="btn-info mr-4">Add more to cart</button></a> 
<a asp-action="order_confirm"><button class="btn-primary">Proceed to Purchase</button></a>