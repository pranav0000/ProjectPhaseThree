@model Phase_three_project_final.Models.TblAdmin;

@{
    ViewData["Title"] = "Login";
}


<h4>Admin Login</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AdminUname" class="control-label"></label>
                <input asp-for="AdminUname" class="form-control" />
                <span asp-validation-for="AdminUname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdminPwd" class="control-label"></label>
                <input asp-for="AdminPwd" class="form-control" />
                <span asp-validation-for="AdminPwd" class="text-danger"></span>
            </div>
  
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
        <b>@ViewBag.msg</b>
    </div>
</div>

<a asp-controller="Home" asp-action="index">Back to index</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
